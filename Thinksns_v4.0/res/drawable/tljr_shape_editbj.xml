<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- layout background -->
    <item>

        <!-- show rectangle area -->
        <shape android:shape="rectangle" >
            <gradient
                android:centerColor="#000000"
                android:endColor="#f5f5f5"
                android:startColor="#f5f5f5"
                android:type="linear" />
        </shape>
    </item>
    <item>

        <!-- show rectangle area -->
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:centerColor="#000000"
                android:endColor="#f5f5f5"
                android:startColor="#f5f5f5"
                android:type="linear" />
        </shape>
    </item>
    <!-- layout foreground -->
    <item
        android:bottom="5px"
        android:left="5px"
        android:right="5px"
        android:top="5px">

        <!-- show rectangle area -->
        <shape android:shape="rectangle" >
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

</layer-list>