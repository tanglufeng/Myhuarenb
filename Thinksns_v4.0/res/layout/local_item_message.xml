<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/mainclick_selector"
    android:clickable="true">

    <RelativeLayout
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:id="@+id/relative_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size15">
        <ImageView

            android:src="@drawable/img_local_huangye"
            android:id="@+id/img_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitXY" />
        <TextView
            android:visibility="gone"
            android:id="@+id/t_text"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="招"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/relative_left"
        android:paddingBottom="@dimen/margin_size8"
        android:paddingLeft="@dimen/margin_size15"
        android:paddingRight="@dimen/margin_size15"
        android:paddingTop="@dimen/margin_size8">


        <LinearLayout
            android:id="@+id/linear_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/t_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="5"
                android:singleLine="true"
                android:text="12312312wqweq3"
                android:textSize="16sp" />

            <RelativeLayout

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="20dp">
                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/tv_tay"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:background="@drawable/img_zuire"
                    android:text="最热"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/t_tips"
                android:textColor="@color/tljr_statusbarcolor"
                android:textSize="8sp"
                android:text="房屋租赁"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:background="@drawable/line_frame_main_red"/>

            <ImageView
                android:id="@+id/img_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/img_tips"
                android:src="@drawable/img_local_location" />

            <TextView
                android:layout_weight="1"
                android:singleLine="true"
                android:id="@+id/t_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/img_location"
                android:text="新华网"
                android:textColor="@color/hwg_text3"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/t_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="3月12"
                android:textColor="@color/text_gray"
                android:textSize="12sp" />
        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/subscribe_seperate_line" />


</RelativeLayout>