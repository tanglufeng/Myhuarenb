<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/tljr_zixuan_leftimage"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="-5dp"
            android:contentDescription="@null"
            android:src="@drawable/img_yyg_isbuy" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp" >

            <TextView
                android:id="@+id/tljr_hq_zx_hu_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/text_big_size" />

            <TextView
                android:id="@+id/tljr_hq_zx_hu_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tljr_hq_zx_hu_price"
                android:text="0"
                android:textSize="@dimen/text_small_size" />

            <TextView
                android:id="@+id/tljr_hq_zx_hu_changpercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tljr_hq_zx_hu_price"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tljr_hq_zx_hu_change"
                android:text="0"
                android:textSize="@dimen/text_small_size" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="2dp"
        android:layout_height="fill_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:contentDescription="@null"
        android:src="@drawable/img_shijianzhouxian" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/tljr_zixuan_rightimage"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="-5dp"
            android:contentDescription="@null"
            android:src="@drawable/img_yyg_isbuy" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp" >

            <TextView
                android:id="@+id/tljr_hq_zx_sz_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/text_big_size" />

            <TextView
                android:id="@+id/tljr_hq_zx_sz_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tljr_hq_zx_sz_price"
                android:text="0"
                android:textSize="@dimen/text_small_size" />

            <TextView
                android:id="@+id/tljr_hq_zx_sz_changpercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tljr_hq_zx_sz_price"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tljr_hq_zx_sz_change"
                android:text="0"
                android:textSize="@dimen/text_small_size" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>